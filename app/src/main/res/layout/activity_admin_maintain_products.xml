<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AdminMaintainProductsActivity"
        tools:ignore="ExtraText">
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardElevation="15dp"

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/maintain_product_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/select_product_image"
                android:layout_marginTop="30dp"
                />

            <EditText
                android:id="@+id/maintain_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Name"
                android:layout_below="@id/maintain_product_image"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:background="@drawable/input"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/maintain_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Description"
                android:layout_marginTop="20dp"
                android:layout_below="@id/maintain_product_name"
                android:textAlignment="center"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/input"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/maintain_apply_changes_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply Changes"
                android:layout_marginTop="20dp"
                android:layout_below="@id/maintain_product_description"
                android:textAlignment="center"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/bittons"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/maintain_delete_products_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Product"
                android:layout_marginTop="20dp"
                android:layout_below="@id/maintain_apply_changes_btn"
                android:textAlignment="center"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/bittons"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal" />
        </RelativeLayout>

</androidx.cardview.widget.CardView>